<% include ../layout/head.ejs %>
  <div class="ui one column centered grid">
    <div class="six wide column">
      <div class="ui segment">
        <form class="ui form" method="POST" action="/authentication/sign-in">
          <div class="field">
            <label for="email">
              <i class="envelope icon"></i>
              Почта
            </label>
            <input id="email" name="email" type="email" placeholder="example@example.com" >
          </div>
          <div class="field">
            <label for="password">
              <i class="lock icon"></i>
              Пароль
            </label>
            <input id="password" name="password" type="password" placeholder="********" >
          </div>
          <div class="ui two column grid">
            <div class="column">
              <button class="ui fluid button" type="submit">Войти</button>
            </div>
            <div class="column">
              <button class="ui fluid button" type="button" onclick="window.location.href = '/authentication/sign-up'">Регистрация</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<script src="/js/custom/authentication/sign-in/sign-in-validation.js"></script>
<% include ../layout/foot.ejs %>